.component__header
    height 44px
    display block
    background-color #000

    .header_wrap
        height 44px
        border-bottom-width 1px
        border-top-width 0
        position relative
        width 100%

    .header_title
        font-size 17px
        font-weight 500
        height 43px
        line-height 44px
        margin 0 auto
        min-width 30px
        overflow hidden
        text-align center
        text-overflow ellipsis
        white-space nowrap

    .button_left
        bottom 5px
        position absolute
        left 5px
        top 5px        

    .button_right
        bottom 5px
        position absolute
        right 5px
        top 5px