/*
  Form
*/

.select_title
    height 32px
    border none
    background-color #000
    color #fff

.select_large
    width 100%
    height 32px
    border none
    background-color #000
    color #fff
    
.reserve_form
  margin 0 16px

  .reserve_form_title
    font-size 17px
    text-align center

  .reserve_form_row
    margin 12px 0

  select, input[type='text'], textarea
    width 100%

  input[type='text'], textarea
    border 1px solid #ddd
    color #333
    display inline-block
    font-family cabin !important
    font-size 14px
    letter-spacing 1px
    box-shadow 0 1px 5px rgba(0, 0, 0, 0.1)

    &focus
      border 1px solid #b5861d
