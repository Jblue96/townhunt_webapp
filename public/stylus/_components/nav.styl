.component__nav
    background-color #1D1F20
    background-image linear-gradient(145deg, #1D1F20, #404348)
    
    .nav_logo
        height 32px
        border-bottom 1px solid #2a2d2f
        padding 20px
        
    .nav_menu
        ul
            border-top 1px solid #eee
            
        li
            position relative
            line-height 32px
            border-bottom 1px solid #eee

        a
            display block
            color #fff
            text-decoration none
            padding 10px 20px
        
        span
            position absolute
            right 8px
            top 8px
        
    .nav_sns_wrap
        margin-top 12px
        padding 8px 0
        text-align center
