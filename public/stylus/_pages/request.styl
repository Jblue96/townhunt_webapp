.page__request

    .request_list_bg
        width 100%
        // background-size 100% 80px
        background-position center center

    .request_list_item
        position relative
        height 80px
        padding 12px
        z-index 1
        
        a
            text-decoration none
            color #fff
        
            &:before
                content ''
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background-color #000
                opacity 0.4
                z-index -1

    .request_detail_banner_bg
        width 100%
        height 160px
        display inline-block
        background-position center center
        background-repeat no-repeat
        background-size cover

    .request_detail_summary
        padding 12px
        border-bottom 2px solid #666
        
    .request_detail_title
        font-size 16px  
        font-weight 700
    
    .request_detail_table
        height 40px
        width 100%
        display table
