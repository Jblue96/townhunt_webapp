.page__detail
    
    .detail_banner_bg
      width 100%
      height 160px
      
    .detail_summary
        padding 12px
        border-bottom 2px solid #666
        
    .detail_title
        font-size 16px
    
    .detail_table
        height 40px
        width 100%
        display table

    .detail_middle
        display table-cell
        position relative
        vertical-align middle

    .detail_right
        display table-cell
        position relative
        vertical-align middle
        text-align right
        
    .detail_main
        padding 12px
        
        h3, p
            margin 8px 0
            
        p 
            word-break break-all

        a
            text-decoration underline
        
        ul 
            list-style disc
        ol
            padding 0
            list-style decimal

        li
            border none
            padding 0
            margin 4px 0
            list-style-position inside
            
    .detail_location
        margin 12px 0
        padding 12px
        background-color #eee
        color #222
        border-radius(8px)

    .detail_footer
        // position fixed
        // bottom 0
        width 100%

    .detail_btn
        width 100%
        line-height 60px
        font-size 18px
        text-align center
        background-color #217ffa