// .page__detail
    
    .detail_banner_bg
      width 100%
      height 160px
      display inline-block
      background-position center center
      background-repeat no-repeat
      background-size cover
      
    .detail_summary
        padding 12px
        border-bottom 2px solid #666
        
    .detail_title
        font-size 16px
        font-weight 700
    
    .detail_location
        padding 12px
        line-height 60px
        text-align center
        border-bottom 2px solid #666
        
        .detail_location_link
            display block
        
        p
            white-space nowrap
            width 100%
            overflow hidden
            -o-text-overflow ellipsis
            text-overflow ellipsis

    .detail_table
        height 40px
        width 100%
        display table

    .detail_middle
        display table-cell
        position relative
        vertical-align middle

    .detail_right
        display table-cell
        position relative
        vertical-align middle
        text-align right
        
    .detail_main
        padding 12px
        
        h3, p
            margin 8px 0
            
        p 
            word-break break-all

        a
            text-decoration underline
        
        ul 
            list-style disc
        ol
            padding 0
            list-style decimal

        li
            border none
            padding 0
            margin 4px 0
            list-style-position inside

        dl
            border none
            
    .detail_footer
        // position fixed
        // bottom 0
        width 100%
